<h1> Tasks <h1>
<div class="list-group">
  <% @tasks.each do |task|%>
    <a href="tasks/<%= task.id%>" class="list-group-item list-group-item-action">
      <% if task.completed == true %>
        <input type="checkbox" class="blue-checkbox" checked disabled>
      <% else %>
        <input type="checkbox" class="blue-checkbox" disabled>
      <%end%>

      <%= task.title%>

    </a>
  <%end %>
</div>
